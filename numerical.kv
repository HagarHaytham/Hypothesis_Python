<CalcGrid@GridLayout>:
    rows: 12
    spacing: 5
    padding: 5
    BoxLayout:
        TextInput:
            id: entry
            multiline: False
    BoxLayout:
        Button:
            text: "^"
            on_press: entry.text += '**'
        Button:
            text: "\u221A"
            on_press: entry.text += 'sqrt('
        Button:
            text: "e"
            on_press: entry.text += self.text
        Button:
            text: "AC"
            on_press: entry.text = ""
    BoxLayout:
        Button:
            text: "log"
            on_press: entry.text += self.text + '('
        Button:
            text: "ln"
            on_press: entry.text += self.text + '('
        Button:
            text: "("
            on_press: entry.text += self.text
        Button:
